{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "enabledManagers": [
        "custom.regex"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^.*\\.ya?ml$"
            ],
            "matchStrings": [
                "originalImage=(?<depName>(?<packageName>.*?)\\s[\\w\\s\\:\\-\\/]*:\\s*)(?<currentValue>[vV]?\\d+[\\.\\-\\w+]*)(@(?<currentDigest>sha256:[a-f0-9]+))?"
            ],
            "autoReplaceStringTemplate": "originalImage={{{depName}}}{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}",
            "datasourceTemplate": "docker"
        }
    ]
}